{
  "name": "catlabinteractive/dolumar",
  "license" : "GPL-3.0",

  "require": {

	"catlabinteractive/dolumar-engine" : "~1.0.5",
    "airbrake/phpbrake": "^0.7.0",
    "openid/php-openid" : "dev-master",

    "pear-pear/MDB2_Driver_mysqli": "1.5.0-beta4",
    "pear-pear/MDB2":               "2.5.0-beta5 as 2.5.0",
    "vlucas/phpdotenv": "^5.6"
  },

  "platform": {
    "php": "^8.1.0"
  },

  "repositories": [
    {
      "type": "vcs",
      "url":  "https://github.com/CatLabInteractive/dolumar-engine.git"
    },

    {
      "type": "vcs",
      "url":  "https://github.com/CatLabInteractive/php-openid.git"
    }
  ],

  "autoload" : {
    "classmap" : [
      "src"
    ]
  },

  "require-dev": {
	"zircote/swagger-php" : "*"
  },

  "minimum-stability" : "stable",
  "prefer-stable" : true,

  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "pear/pear_installer": true
    }
  }
}
