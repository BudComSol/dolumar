{
  "name": "catlabinteractive/dolumar",
  "license" : "GPL-3.0",

  "require": {
    "php": "^5.6.0",

	"catlabinteractive/dolumar-engine" : "dev-master",
    "airbrake/phpbrake": "^0.2.0",
    "openid/php-openid" : "dev-master",

    "pear-pear/MDB2_Driver_mysqli": "1.5.0-beta4",
    "pear-pear/MDB2":               "2.5.0-beta5 as 2.5.0"
  },

  "repositories": [
    {
      "type": "vcs",
      "url":  "git@github.com:CatLabInteractive/dolumar-engine.git"
    },

    {
      "type": "vcs",
      "url":  "git@github.com:CatLabInteractive/php-openid.git"
    },

    {
      "type": "pear",
      "url": "https://pear.php.net"
    }
  ],

  "autoload" : {
    "classmap" : [
      "src"
    ]
  },

  "require-dev": {
	"heroku/heroku-buildpack-php": "*",
	"zircote/swagger-php" : "*"
  },

  "minimum-stability" : "stable",
  "prefer-stable" : true,

  "config": {
    "secure-http": false
  }
}
